<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ app.request.server.get('NAME_SITE') }}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="{{ asset('/css/all.css') }}">
    </head>
    <body>
    <header class="top-bar">
        <nav>
            <div class="logo">
{#                <h1>{{ app.request.server.get('NAME_SITE') }}</h1>#}
                <img src="{{ asset('img/logo/logo-enisortir.png') }}" alt="logo ENISortir">
            </div>
            <div class="nav-container">
                <div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin') }}">Admin</a>
                    {% endif %}
                </div>
                <div>
                    <a href="{{ path('home_index') }}">Accueil</a>
                </div>
                <div>
                    <a href="{{ path('profile_myprofile') }}">Mon Profil</a>
                </div>
                {% if app.user %}
                    <div>
                        <a href="{{path('app_logout')}}">Se déconnecter</a>
                    </div>
                {% endif %}
            </div>
        </nav>
    </header>

    <main>
        {% block body %}{% endblock %}
    </main>
    <div class="message">
        {% for title, messages in app.flashes %}
            <div>
                {% for message in messages %}
                    <p class="comment {{ title }}">{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    <script src="{{ asset('/js/script.js') }}"></script>
    <footer class="bottom-bar">
           <p>&copy; ENISortir {{ "now" | date("Y") }} - Marie Berger · Julien Grit · Hélène Amouzou </p>
    </footer>
    </body>
</html>
