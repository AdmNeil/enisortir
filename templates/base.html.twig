<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ app.request.server.get('NAME_SITE') }}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="icon" href="{{ asset('img/logo/logo-enisortir.png') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="{{ asset('/css/all.css') }}">
    </head>
    <body>
    <nav>
        <a class="logo" href="{{ path('home_index') }}">
            <img class="logo-img" src="{{ asset('img/logo/logo-enisortir.png') }}" alt="logo ENISortir">
        </a>
        {%  if app.user %}
        <div class="nav-container">
            <div class="block-user-menu">
                <i class="colorCust fa-solid fa-user"></i>
                <span class="nav-1">{{ app.user }}</span>
            </div>
            <div class="nav-2">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="nav-3" href="{{ path('admin') }}">
                        <i class="nav-4 fa-solid fa-screwdriver-wrench"></i>
                        <span>Admin</span>
                    </a>
                {% endif %}
                <a class="nav-3" href="{{ path('profile_myprofile') }}">
                    <i class="nav-4 fa-solid fa-address-card"></i>
                    <span>Mon Profil</span>
                </a>
                <a class="nav-3" href="{{path('app_logout')}}">
                    <i class="nav-4 fa-solid fa-right-from-bracket"></i>
                    <span>Se déconnecter</span>
                </a>
            </div>
        </div>
        {% endif %}
    </nav>

    <main>
        {% block body %}{% endblock %}
        <ul class="circles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </main>

    <div class="message">
        {% for title, messages in app.flashes %}
            <div class="un-popup">
                {% for message in messages %}
                    <p class="comment {{ title }}">{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}
    </div>

    <footer class="bottom-bar">
        <p>&copy; ENISortir {{ "now" | date("Y") }} - Marie Berger · Julien Grit · Hélène Amouzou </p>
    </footer>


    <!--<div class="cube">
                        <div class="face top"></div>
                        <div class="face bottom"></div>
                        <div class="face left"></div>
                        <div class="face right"></div>
                        <div class="face front"></div>
                        <div class="face back"></div>

                    </div>-->

    {% block template %}{% endblock %}

    <script src="{{ asset('/js/script.js') }}"></script>

    </body>
</html>
