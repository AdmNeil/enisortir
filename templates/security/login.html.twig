{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Log in!{% endblock %}

{% block body %}
<form class="form-login" method="post">
    <div class="border_bottom">
        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
     </div>
    {% if error %}
        <div class="alert alert-danger">Pseudo ou mot de passe non valide.</div>
    {% endif %}
    <div class="corps-formulaire">
        <div class="groupe">
            <label class="labelBold" for="inputUsername">Pseudo</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            <i class="fa-solid fa-user"></i>
        </div>
        <div class="groupe">
            <label class="labelBold" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <i class="fa-solid fa-lock"></i>
        </div>
        <div class="groupe">
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se Souvenir
                </label>
            </div>
        </div>
        <div class="groupe">
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
        </div>
    </div>
    <div class="pied">
    <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
    </div>
</form>
{% endblock %}
