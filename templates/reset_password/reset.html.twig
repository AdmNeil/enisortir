{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Réinitialisation{% endblock %}

{% block body %}
    <div class="display-myprofile-container">
        <div class="border_bottom">
            <h1>Réinitialiser votre mot de passe</h1>
        </div>
        {{ form_start(resetForm, { 'attr': { 'class': 'corps-formulaire'}}) }}
        <div>
            {{ form_row(resetForm.plainPassword, { 'attr': { 'class': 'groupe inputProfile' }}) }}
        </div>
        <div class="pied">
            <button class="btn btn-primary">Réinitialiser mot de passe</button>
        </div>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
